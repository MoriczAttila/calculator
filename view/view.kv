<Calculator>:
    display: display
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'view/background.jpg'

    BoxLayout:
        orientation: 'vertical'
		center: self.parent.center
		size: 350, 500
        canvas.before:
            Color:
                rgba: 0.345, 0.345, 0.345, 1 # 1, .5, 0, 1
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            id: display
            text: ''
            font_size: 28
        GridLayout:
            cols: 4
            GridLayout:
                rows: 5
                Button:
                    text: '('
                    on_press: root.control('(')
                Button:
                    text: '7'
                    on_press: root.control('7')
                Button:
                    text: '4'
                    on_press: root.control('4')
                Button:
                    text: '1'
                    on_press: root.control('1')
                Button:
                    text: '0'
                    on_press: root.control('0')
            GridLayout:
                rows: 5

                Button:
                    text: ')'
                    on_press: root.control(')')
                Button:
                    text: '8'
                    on_press: root.control('8')
                Button:
                    text: '5'
                    on_press: root.control('5')
                Button:
                    text: '2'
                    on_press: root.control('2')
                Button:
                    text: '.'
                    on_press: root.control('.')
            GridLayout:
                rows: 5

                Button:
                    text: 'C'
                    background_color: 0, 0, 0, 1
                    on_press: root.control('C')
                Button:
                    text: '9'
                    on_press: root.control('9')
                Button:
                    text: '6'
                    on_press: root.control('6')
                Button:
                    text: '3'
                    on_press: root.control('3')
                Button:
                    text: '='
                    background_color: 0, 0, 0, 1
                    on_press: root.control('=')
            GridLayout:
                rows: 5

                Button:
                    text: 'DEL'
                    background_color: 0, 0, 0, 1
                    on_press: root.control('DEL')
                Button:
                    text: '/'
                    on_press: root.control('/')
                Button:
                    text: 'x'
                    on_press: root.control('x')
                Button:
                    text: '-'
                    on_press: root.control('-')
                Button:
                    text: '+'
                    on_press: root.control('+')